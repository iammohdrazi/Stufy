<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_students">

    <fragment
        android:id="@+id/nav_students"
        android:name="com.example.petinfo.ui.students.StudentsFragment"
        android:label="Students"
        tools:layout="@layout/fragment_students" >
        <action
            android:id="@+id/action_nav_home_self"
            app:destination="@id/nav_students" />
    </fragment>

    <fragment
        android:id="@+id/nav_assignment"
        android:name="com.example.petinfo.ui.assignment.AssignmentFragment"
        android:label="Assignment"
        tools:layout="@layout/fragment_assignment" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.petinfo.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_sync"
        android:name="com.example.petinfo.ui.sync.SyncFragment"
        android:label="Sync"
        tools:layout="@layout/fragment_sync" />

    <fragment
        android:id="@+id/nav_share"
        android:name="com.example.petinfo.ui.share.ShareFragment"
        android:label="Share"
        tools:layout="@layout/fragment_share" />

    <fragment
        android:id="@+id/nav_chat"
        android:name="com.example.petinfo.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/nav_feedback"
        android:name="com.example.petinfo.ui.feedback.FeedbackFragment"
        android:label="FeedBack"
        tools:layout="@layout/fragment_feedback" >
        <action
            android:id="@+id/action_nav_feedback_self"
            app:destination="@id/nav_feedback" />
    </fragment>

</navigation>